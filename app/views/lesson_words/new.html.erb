<%=  provide(:title,"Lesson") %>

<div class= "row">
    <div class="col-center">
        <h1 class="text-center"><%= yield(:title) %></h1>
        <h2 class="text-center"><%= @category.title %></h2>
        <%= @word.content %>
        <% @word.word_answers.each do |word_answer| %>
        	<%= button_to word_answer.content, lesson_lesson_words_path(@lesson), params: {word_id: @word.id,word_answer_id: word_answer.id} %>
        <% end %>
    </div>
</div>